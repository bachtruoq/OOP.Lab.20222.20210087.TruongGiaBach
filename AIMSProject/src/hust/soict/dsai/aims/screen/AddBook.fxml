<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.dsai.aims.screen.AddBookToStoreScreen">
   <top>
      <VBox prefHeight="150.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="ADD BOOK" textFill="#b11e1e">
               <font>
                  <Font size="50.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="*compulsory" textFill="RED">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox>
               <children>
                  <VBox prefWidth="200.0">
                     <children>
                        <Label text="Title">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField fx:id="title" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefWidth="200.0">
                     <children>
                        <Label text="Category">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField fx:id="category" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefWidth="200.0">
                     <children>
                        <Label text="Cost">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField fx:id="cost" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="100.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <Label text="*optional" textFill="RED">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Authors">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="authors" maxWidth="-Infinity" prefHeight="200.0" prefWidth="500.0">
                     <VBox.margin>
                        <Insets bottom="50.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <Button mnemonicParsing="false" onAction="#addtostoreBtnPressed" style="-fx-background-color: red;" text="Add to Store" textFill="WHITE" BorderPane.alignment="TOP_CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets right="30.0" />
         </BorderPane.margin>
      </Button>
   </right>
</BorderPane>
